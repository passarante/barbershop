generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}




model Slot{
 id Int  @id @default(autoincrement())
 date DateTime
 begTime DateTime
 endTime DateTime
 isOff Boolean
 appointmentId Int?

appointment Appointment? @relation(fields: [appointmentId], references: [id])


 @@unique([id])
}

model Appointment{
   id Int  @id @default(autoincrement())
   date DateTime
   userId String
   isCancelled Boolean

   slots Slot[]
}
model Settings{
   id Int  @id @default(autoincrement())
   slotTime Int
   isSundayOff Boolean
   begTime String
   endTime String

}